{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": [],
    "paths": {
      "@appSharedServices/*": ["questionnaireShared/services/*"],
      "@appSharedComponents/*": ["questionnaireShared/components/*"],
      "@services/*": ["services/*"],
      "@components/*": ["components/*"],
      "@sharedServices/*": ["angularShared/services/*"],
      "@sharedComponents/*": ["angularShared/components/*"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
